<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <TextView
        android:id="@+id/txt_question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Question 1"
        android:textSize="80sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/txt_team_that_pressed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Team one pressed the button first!"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Question text text text text text text text text text text text text text text text text text??????"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_above="@id/txt_team_that_pressed"
        android:layout_below="@id/txt_question_number"

        />

</RelativeLayout>